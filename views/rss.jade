doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Devin Young Web Blog Feed
    <link>#{base_url}/blog</link>
    description Devin Young's Blog RSS Feed
    atom:link(href='#{base_url}/feed', rel='self', type='application/rss+xml')
    each post in posts
      - var full_url = base_url + post.url
      item
        title= post.title
        <link>#{full_url}</link>
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= full_url
