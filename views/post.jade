extends layout

block content
  .author
    span By #[a(href="https://google.com/+DevinYoungRocks" rel="author") Devin Young] in #[a(href=categoryURL(post.category)) #{post.category}]
    br
    span Posted On #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
  img.home-img(src="https://dl.dropboxusercontent.com/u/281059208/#{post.slug}.jpg")
  br
  != post.content

  div#disqus_thread
  script.
    var disqus_shortname = 'devinyoungweb';
    var disqus_identifier = "#{post.slug}";
    var disqus_title = "#{post.title}";
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
